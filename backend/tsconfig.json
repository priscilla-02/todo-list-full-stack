{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "typeRoots": ["./node_modules/@types"],
        "types": ["node", "jest"]
    },
    "include": ["src", "__tests__"],
    "exclude": ["node_modules"]
}
